{
  "name": "E621ng project development",
  "dockerComposeFile": ["../docker-compose.yml", "docker-compose.extend.yml"],
  "service": "dev-container",
  "overrideCommand": true,
  "workspaceFolder": "/app",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "onCreateCommand": {
    "remove-gitconfig": "rm ~/.gitconfig"
  },
  "mounts": [
  //   "source=/home/${localEnv:USER}/.gnupg,target=/home/vscode/.gnupg,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "postAttachCommand": {
    "git-safe-dir": "git config --global --add safe.directory /app",
    "copy-env": "[ ! -f .env ] && cp .env.sample .env"
  },
  "postCreateCommand": {
    "bash-completion": "sudo apk --no-cache add bash-completion && echo 'source /etc/bash/bash_completion.sh' >> ~/.bash_profile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        /** General **/
        // "EditorConfig.EditorConfig",
        // "ms-azuretools.vscode-docker",

        /** CSS / SCSS / HTML **/
        // "stylelint.vscode-stylelint", // stylelint is also available as a ESLint plugin. This should be removed when that is implemented.
        // "ecmel.vscode-html-css",

        /** SQL **/
        // "ckolkman.vscode-postgres",

        /** JavaScript / TypeScript / Vue **/
        "Vue.volar",
        "dbaeumer.vscode-eslint",

        /** Ruby / Rails **/
        "Shopify.ruby-lsp"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "dev.containers.openTerminal": "on"
      }
    }
  }
}
