{
  "name": "cat621 (dev)",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.extend.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/app",
  "remoteUser": "${localEnv:DOCKER_USER-root}",
  "overrideCommand": false,
  "shutdownAction": "none",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    // "ghcr.io/devcontainers-extra/features/fnm:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "git config --global --add safe.directory /app",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-extensions-pack",
        "castwide.solargraph",
        "rebornix.ruby",
        "sianglim.slim",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/**": true,
          "**/tmp/**": true
        },
        "editor.formatOnSave": true,
        "ruby.useLanguageServer": true
      }
    }
  },
  "runServices": [
    "postgres",
    "redis",
    "memcached",
    "opensearch",
    "iqdb",
    "autocompleted",
    "e621",
    "nginx"
  ],
  "remoteEnv": {
    "EXPOSED_SERVER_PORT": "${localEnv:EXPOSED_SERVER_PORT-3000}",
    "EXPOSED_POSTGRES_PORT": "${localEnv:EXPOSED_POSTGRES_PORT-34517}",
    "HOST_UID": "${localEnv:HOST_UID-1000}",
    "HOST_GID": "${localEnv:HOST_GID-1000}",
    "DOCKER_USER": "${localEnv:DOCKER_USER-root}"
  }
}
