<%= custom_form_for(@reason) do |f| %>
  <%= f.input :name, as: :string, hint: "Internal key (e.g. inferior)" %>
  <%= f.input :reason, as: :string, hint: "Short label shown in UI" %>
  <%= f.input :text, as: :dtext, label: "Description", hint: "Detailed guidance; DText supported" %>
  <%= f.input :needs_explanation, as: :boolean, label: "Additional Details Required" %>
  <%= f.input :needs_parent_id, as: :boolean, label: "Requires parent post id" %>
  <%= f.input :index, as: :integer, label: "Order index", input_html: { min: 0 } %>
  <%= f.input :category, as: :select, collection: [["Flag", "flag"], ["Report", "report"], ["None (Header)", "none"]], include_blank: false, label: "Creates" %>
  <%= f.input :parent_id, as: :select, collection: PostFlagReason.where.not(id: @reason.id).ordered.pluck(:reason, :id), include_blank: true, label: "Parent reason", hint: "Optional parent reason for hierarchical reasons" %>
  <%= f.button :submit, "Submit" %>
<% end %>
