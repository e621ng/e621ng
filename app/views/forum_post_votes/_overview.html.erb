<%# locals: (votes:, forum_post:, votable: true) -%>

<% vote_counts = votes.group_by(&:score).transform_values(&:size).values_at(1, 0, -1).map(&:to_i) %>

<ul class="forum-post-votes-overview" id="forum-post-vote-overview-for-<%= forum_post.id %>">
  <% { "fa-thumbs-up" => vote_counts[0], "fa-face-meh" => vote_counts[1], "fa-thumbs-down" => vote_counts[2] }.each do |icon, count| %>
    <%= count %>
    <%= tag.i(class: "fa-regular #{icon}") %>
  <% end %>
</ul>
