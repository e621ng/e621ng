<%= custom_form_for(@bulk_update_request) do |f| %>
  <%= error_messages_for("bulk_update_request") %>

  <% if @bulk_update_request.new_record? %>
    <%= f.input :title, :as => :string %>
  <% end %>

  <div class="input">
    <label class="text optional" for="bulk_update_request_script">Script</label>
    <%= text_area :bulk_update_request, :script, :size => "50x10" %>
    <a href="#" id="script-help-link">Help</a>
    <ul class="hint" id="script-help" title="Bulk Update Request Help" style="display: none;">
      <li>unalias aaa -> bbb</li>
      <li>unimply aaa -> bbb</li>
      <li>alias aaa -> bbb</li>
      <li>imply aaa -> bbb</li>
      <li>update aaa -> bbb</li>
      <li>category tag_name -> category_name</li>
      <% if CurrentUser.is_admin? %>
        <li>nuke tag_name</li>
      <% end %>
    </ul>
  </div>

  <% if @bulk_update_request.new_record? %>
    <%= f.input :reason, as: :dtext, limit: Danbooru.config.forum_post_max_size %>
  <% end %>

  <% if CurrentUser.is_admin? %>
    <div class="input">
      <label class="checkbox optional" for="bulk_update_request_skip_forum">
        <%= check_box "bulk_update_request", "skip_forum" %>
        Skip forum creation
      </label>
    </div>
  <% end %>

  <% if @bulk_update_request.new_record? %>
    <%= f.input :forum_topic_id, as: :string, :hint => " (optional)" %>
  <% elsif @bulk_update_request.persisted? && CurrentUser.is_admin? %>
    <%= f.input :forum_topic_id, as: :string %>
    <%= f.input :forum_post_id, as: :string %>
  <% end %>

  <%= f.button :submit, :value => "Submit" %>
<% end %>

<%= content_for(:html_header) do %>
  <%= javascript_tag nonce: true do -%>
    $(function() {
      const help = $("#script-help");
      $("#script-help-link").on("click", (event) => {
        event.preventDefault();
        help.toggle();
        return false;
      });
    });
  <% end -%>
<% end %>
