<div id="c-popular">
  <div id="a-index">
    <h1>Popular: <%= @post_set.presenter.range_text %></h1>

    <%= @post_set.presenter.nav_links(self) %>

    <%= render "posts/partials/common/inline_blacklist" %>

    <div id="posts">
      <section class="posts-container">
        <% if @post_set.posts.any? %>
          <%= render(PostThumbnailComponent.with_collection(@post_set.posts, stats: CurrentUser.show_post_statistics?)) %>
        <% else %>
          <p class="no-results">Nobody here but us chickens!</p>
        <% end %>
      </section>
    </div>
  </div>
</div>

<%= render "posts/partials/common/secondary_links" %>

<% content_for(:page_title) do %>
  Popular
<% end %>

<% content_for(:html_header) do %>
  <meta name="description" content="The most popular posts per day">
<% end %>
