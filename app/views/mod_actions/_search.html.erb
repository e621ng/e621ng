<%= form_search(path: mod_actions_path) do |f| %>
  <%= f.user :creator %>
  <%= f.input :action,
      collection: (
        ModAction.available_action_keys.map do |key|
          [
            key.to_s.capitalize.tr("_", " "),
            key.to_s,
            { data: { fields: ModAction::KnownActions[key].keys.join(",") } }
          ]
        end
      ),
      include_blank: true %>
<% end %>
