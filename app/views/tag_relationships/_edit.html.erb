<div id="c-tag-<%= plural %>">
  <div id="a-edit">
    <h1>Edit Tag <%= singular.capitalize %></h1>

    <%= error_messages_for :"tag_#{singular}" %>

    <%= custom_form_for(tag_relation) do |f| %>
      <% if rel_type == :alias %>
        <%= f.input :antecedent_name, label: "From", as: :string, disabled: tag_relation.is_active? %>
        <%= f.input :consequent_name, label: "To", disabled: tag_relation.is_active? %>
      <% else %>
        <%= f.input :antecedent_name, label: "From" %>
        <%= f.input :consequent_name, label: "To" %>
      <% end %>
      <%= f.input :forum_topic_id, label: "Forum" %>
      <%= f.button :submit, data: { disable_with: "Updating..." } %>
    <% end %>
  </div>
</div>

<%= render "tag_relationships/secondary_links", rel_type: rel_type %>

<% content_for(:page_title) do %>
  Edit Tag <%= singular.capitalize %>
<% end %>
