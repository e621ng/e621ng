<% if @post.parent_id && @post.parent_exists? %>
  <div class="notice notice-child">
    <%= has_parent_message(@post, @parent_post_set) %>
    <div id="has-parent-relationship-preview" style="display: none;">
      <%= render(PostThumbnailComponent.with_collection(@parent_post_set.posts, tags: @parent_post_set.tag_string, stats: CurrentUser.show_post_statistics?)) %>
    </div>
  </div>
<% end %>

<% if @post.has_visible_children? %>
  <div class="notice notice-parent">
    <%= has_children_message(@post, @children_post_set) %>
    <div id="has-children-relationship-preview" style="display: none;">
      <%= render(PostThumbnailComponent.with_collection(@children_post_set.posts, tags: @children_post_set.tag_string, stats: CurrentUser.show_post_statistics?)) %>
    </div>
  </div>
<% end %>
