<div id="c-post-versions">
  <div id="a-index">
    <%= render "search" %>

    <h1>Changes</h1>

    <% if CurrentUser.is_moderator? %>
      <div>
        <div class="input">
          <label>Tag Script</label>
          <input id="update-tag-script" placeholder="tag script to apply here"/>
        </div>
      </div>
    <% end %>

    <% if @post_versions.length == 0 %>
      <%= render "posts/blank" %>
    <% else %>
    <%= render "listing" %>


      <% if params[:lr] && CurrentUser.is_moderator? %>
        <p><%= link_to "Revert this user's changes", new_user_revert_path(:user_id => params[:lr]) %></p>
      <% end %>

      <%= numbered_paginator(@post_versions) %>
    <% end %>
  </div>
</div>

<%= javascript_tag nonce: true do -%>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.closebutton').forEach(function(button) {
      button.addEventListener('click', function(e) {
        const popup = e.target.closest('.desc-popup');
        if (popup) {
          popup.style.display = 'none';
        }
      });
    });
    
    document.querySelectorAll('.desc-show').forEach(function(button) {
      button.addEventListener('click', function(e) {
        const next = e.target.nextElementSibling;
        if (next) {
          next.style.display = next.style.display === 'none' ? 'block' : 'none';
        }
      });
    });
  });
<% end -%>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Post Changes
<% end %>
